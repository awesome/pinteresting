<div class="pt_edit_member pt_bg_color center-block">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }, :class => "form-horizontal") do |f| %>
    <h2 class="pt_center pt_heading">Edit
      <%= resource_name.to_s.humanize %></h2>
    <% if resource.errors.any? %>
      <div class="alert alert-danger">
        <% resource.errors.full_messages.each do |msg| %>
          <p>
            <%= msg %>
          </p>
        <% end %>
      </div>
    <% end %>
    <div class="form-group">
      <%= f.label :name, "Name", :class => "col-sm-4 control-label" %>
      <%= f.text_field :firstname, :autofocus => true %>
      <%= f.text_field :lastname %>
    </div>
    <div class="form-group">
      <%= f.label :membername, "Member Name", :class => "col-sm-4 control-label"  %>
      www.pinteresting.com/<%= f.text_field :membername %>
    </div>
    <div class="form-group">
      <%= f.label :email, "Email Address", :class => "col-sm-4 control-label" %>
      <%= f.email_field :email %>
    </div>
    <div class="form-group">
      <%= f.label :current_password, "Current Password", :class => "col-sm-4 control-label"  %>
      <%= f.password_field :current_password %>
    </div>
    <div class="form-group">
      <%= f.label :password, "New Password", :class => "col-sm-4 control-label"  %>
      <%= f.password_field :password, :autocomplete => "off" %>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation, "Confirm New Password", :class => "col-sm-4 control-label"   %>
      <%= f.password_field :password_confirmation %>
    </div>
    <div class="form-group">
      <%= f.label :avatar, "Avatar", :class => "col-sm-3 control-label" %>
      <%= f.file_field :avatar %>
    </div>
    <div class="form-group">
      <%= f.label :description, "About You", :class => "col-sm-4 control-label" %>
      <%= f.text_area :description, :rows => 5, cols: 50 %>
    </div>
    <div class="form-group">
      <%= f.label :location, "Location", :class => "col-sm-4 control-label" %>
      <%= f.select :location, ["United States", "India", "UK"], :selected => resource.location %>
    </div>
    <div class="form-group">
      <%= f.label :gender, :class => "col-sm-4 control-label" %>
      <%= f.radio_button :gender, :female %>
      <%= f.label :female  %>
      <%= f.radio_button :gender, :male %>
      <%= f.label :male  %>
    </div>
    <div class="form-group">
      <%= link_to "Deactivate Account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => "btn btn-default col-sm-offset-2" %>
      <%= link_to "Cancel", dashboard_path(resource.membername), :class => "btn btn-default" %>
      <%= f.submit "Save Profile", :class => "btn btn-primary" %>
    </div>
  <% end %>
</div>
