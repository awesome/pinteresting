<div class = "pt_container pt_bg_color pt_center center-block">
  <h2>Join Us</h2>
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <!-- if email is not provided, then membername would not be set.
       Suppress the error "Membername can't be blank." as below.
       The following code works except for the Count of errors.
   -->
    <%# reg_errors = devise_error_messages! %>
    <%# unless reg_errors.empty? %>
    <%# reg_errors.gsub!(/\<li>Membername can&#39;t be blank\<\/li>/,"").html_safe %>
    <%# end %>
    <% if resource.errors.any? %>
      <% unless resource.errors[:membername].empty? %>
        <% resource.errors.delete(:membername) %>
      <% end %>
      <div class="alert alert-danger">
        <% resource.errors.full_messages.each do |msg| %>
          <p>
            <%= msg %>
          </p>
        <% end %>
        <% if resource.provider == "twitter" && resource.email.empty? %>
          <p>
            Twitter does not share your mail. Please enter email.
          </p>
        <% end %>
      </div>
    <% end %>
    <% if resource.password_required? %>
      <div class="form-group">
        <%= f.text_field :firstname, :placeholder => "First Name" ,:autofocus => true %>
        <%= f.text_field :lastname, :placeholder => "Last Name" %>
      </div>
    <% end %>
    <div class="form-group">
      <span class="glyphicon glyphicon-user"></span>
      <%= f.email_field :email, :placeholder => "Email Address" %>
    </div>
    <% if resource.password_required? %>
      <div class="form-group">
        <span class="glyphicon glyphicon-lock"></span>
        <%= f.password_field :password, :placeholder => "Password" %>
      </div>
      <div class="form-group">
        <span class="glyphicon glyphicon-lock"></span>
        <%= f.password_field :password_confirmation , :placeholder => "Confirm Password"%>
      </div>
      <div class="form-group">
        <%= f.select :location, ["United States", "India", "UK"] %>
      </div>
      <div class="form-group">
        <%= f.radio_button :gender, :female  %>
        <%= f.label :female %>
        <%= f.radio_button :gender, :male %>
        <%= f.label :male %>
      </div>
    <% end %>
    <div class="form-group">
      <%= f.submit "Join", class: "btn btn-primary" %>
      <!-- 
     <input type = "image" src = "submit.jpg" value = "Join" name = "commit"> 
     -->
      <%= link_to "Cancel", root_path, class: "btn btn-default" %>
    </div>
  <% end %>
</div>
