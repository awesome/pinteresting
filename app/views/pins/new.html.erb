<div class="pt_container pt_bg_color center-block">
  <h2 class="pt_center pt_heading">New Pin</h2>
  <%= form_for @pin, :url => board_pins_path(@pin.board_id), :html => { :multipart => true }, :class => "form-horizontal"  do |f| %>
    <%= render 'errors' %>
    <div class="form-group">
      <%= f.label "Board", :class => "col-sm-4 control-label" %>
      <%= f.select :board_id, @boards.collect { |b| [b.name, b.id ]}  %>
    </div>
    <div class="form-group">
      <%= f.label "Image", :class => "col-sm-7 control-label" %>
      <%= f.file_field :image %>
    </div>
    <div class="form-group">
      <%= f.label :description, :class => "col-sm-4 control-label"%>
      <%= f.text_area :description, :rows => 3, cols: 30 %>
    </div>
    <div class="form-group">
      <%= link_to "Close", board_path(@pin.board_id), :class => "btn btn-default col-sm-offset-4"  %>
      <%= f.submit "Pin it", :class => "btn btn-primary"  %>
    </div>
  <% end %>
</div>
